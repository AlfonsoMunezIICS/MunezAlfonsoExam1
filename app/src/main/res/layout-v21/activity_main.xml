<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/chair" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/title"
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"

                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Amazon" />

            <TextView
                style="@style/title"
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="47dp"

                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Plastic Chair" />

            <TextView
                style="@style/content"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                tools:text="A really durable chair you can bring anywhere" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton6"
            style="@style/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:text="Red Color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            style="@style/content"
            android:id="@+id/radioButton5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blue Color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            style="@style/content"
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Black Color"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            style="@style/content"
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yellow Color"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            style="@style/buttoncan"
            android:id="@+id/button2"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30sp"
            android:layout_marginLeft="30sp"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="Cancel"
            android:textStyle="bold" />

        <Button
            style="@style/buttongo"
            android:textColor="#FFFFFF"
            android:id="@+id/button"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:text="Add"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>